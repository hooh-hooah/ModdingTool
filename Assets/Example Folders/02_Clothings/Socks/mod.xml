<packer type="fclothe">
    <!-- This will be copied as manifest.xml -->
    <guid>modbuilder.example.socks</guid>
    <name>MODBUILDER SOCKS EXAMPLE</name>
    <version>1.0.0</version>
    <author>hooh</author>
    <description>This is modbuilder example.</description>

    <!-- This section will contain bundle information -->
    <bundles>
        <folder auto-path="prefabs" from="prefabs"/>
        <folder auto-path="thumbs" from="thumbs"/>
    </bundles>

    <!-- This section will contain build information -->
    <build name="@example_socks">
        <list type="fsocks">
            <item name="@@EXAMPLE_SOCKS" mesh-a="clothmesh" tex-main="diffuse" tex-mask="colormask" tex-main2="0" tex-mask2="0" hide-bottom="0" thumb="thumb_image"/>
            <item name="@@EXAMPLE_SOCKS Stripe" mesh-a="clothmesh" tex-main="diffuse_stripe" tex-mask="colormask_stripe" tex-main2="0" tex-mask2="0" hide-bottom="0" thumb="thumb_image"/>
        </list>
    </build>
</packer>